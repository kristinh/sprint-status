<% provide(:title, 'Result for ' + @sprint_result.team.name + ', Sprint ' + @sprint_result.sprint.name) %>
<h1>Result for <%= @sprint_result.team.name %>, Sprint <%= @sprint_result.sprint.name %></h1>
<%= render 'layouts/flash_messages' %>

<p>
  <b>Team:</b>
  <%= @sprint_result.team.name %>
</p>

<p>
  <b>Sprint:</b>
  <%= @sprint_result.sprint.name %>
</p>

<p>
  <b>Points planned:</b>
  <%= @sprint_result.points_planned %>
</p>

<p>
  <b>Points actual:</b>
  <%= @sprint_result.points_actual %>
</p>

<p>
  <b>Person days planned:</b>
  <%= @sprint_result.person_days_planned %>
</p>

<p>
  <b>Person days actual:</b>
  <%= @sprint_result.person_days_actual %>
</p>

<p>
  <b>Points/Person day planned:</b>
  <%= number_with_precision(@sprint_result.points_per_person_day_planned, :precision => 2) %>
</p>

<p>
  <b>Points/Person day actual:</b>
  <%= number_with_precision(@sprint_result.points_per_person_day_actual, :precision => 2) %>
</p>

<p>
  <b>Points completed:</b>
  <%= number_with_precision(@sprint_result.percent_points_completed, :precision => 0) %> %
</p>

<p>
  <b>Person days achieved:</b>
  <%= number_with_precision(@sprint_result.percent_person_days_achieved, :precision => 0) %> %
</p>


<%= link_to(content_tag(:i,'', :class => 'icon-pencil') + ' Edit result', edit_sprint_result_path(@sprint_result), :class => 'btn') %>
<%= link_to(content_tag(:i,'', :class => 'icon-th-list') + ' View all results', sprint_results_path, :class => 'btn') %>
