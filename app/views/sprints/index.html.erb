<% provide(:title, 'Sprints') %>
<h1>Sprints</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Sprint</th>
      <th>Start</th>
      <th>End</th>
      <th>Work days</th>
      <th></th>
    </tr>
  <thead>

  <tbody>
<% @sprints.each do |sprint| %>
    <tr>
      <td><%= sprint.name %></td>
      <td><%= sprint.start %></td>
      <td><%= sprint.end %></td>
      <td><%= sprint.work_days %></td>
      <td class='actions'>
          <%= link_to(content_tag(:i, '', :class => 'icon-eye-open'), sprint) %> |
          <%= link_to(content_tag(:i, '', :class => 'icon-pencil'), edit_sprint_path(sprint)) %> |
          <%= link_to(content_tag(:i, '', :class => 'icon-trash'), sprint, method: :delete, data: { confirm: 'Are you sure?' }) %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Sprint', new_sprint_path %>
