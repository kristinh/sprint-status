<% provide(:title, 'Sprint ' + @sprint.name ) %>
<h1><%= 'Sprint ' + @sprint.name %> </h1>
<%= render 'layouts/flash_messages' %>

<p>
  <b>Starts: </b>
  <%= @sprint.start.to_formatted_s(:long_ordinal) %> 
</p>

<p>
  <b>Ends:</b>
  <%= @sprint.end.to_formatted_s(:long_ordinal) %>
</p>

<p>
  <b>Work days:</b>
  <%= @sprint.work_days %>
</p>

<%= link_to(content_tag(:i,'', :class => 'icon-pencil') + ' Edit sprint', edit_sprint_path(@sprint), :class => 'btn') %>
<%= link_to(content_tag(:i,'', :class => 'icon-th-list') + ' View all sprints', sprints_path, :class => 'btn') %>
